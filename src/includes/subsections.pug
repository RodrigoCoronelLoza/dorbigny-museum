mixin card(src= srcStr, title= "Árbol", desc= descStr, caption= "")
  .card__container 
    figure
      img(src= src loading="lazy" alt= title)
      if caption
        figcaption Foto: #{caption}
    .card__content_container
      .card__content  
        h4= title 
        p= desc 
        button &and;

mixin section(title= "Árboles", cards= [{src: srcStr, title: "Árbol", desc: descStr}, {src: srcStr, title: "Árbol", desc: descStr}])
  div(id!=attributes.id class="section__container")
    button.section__header
      h3= title 
      span &or;
    .section__cards_container.hidden 
      each card in cards 
        +card(card.src, card.title, card.desc, card.caption)

