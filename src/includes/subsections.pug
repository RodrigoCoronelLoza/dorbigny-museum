mixin card(src= srcStr, title= "Árbol", desc= descStr)
  .card__container 
    img(src= src loading="lazy")
    .card__content_container
      .card__content  
        h4= title 
        p= desc 
        button &and;

mixin section(title= "Árboles", cards= [{src: srcStr, title: "Árbol", desc: descStr}, {src: srcStr, title: "Árbol", desc: descStr}])
  div(id!=attributes.id class="section__container")
    .section__header
      h3= title 
      button &or;
    .section__cards_container.hidden 
      each card in cards 
        +card(card.src, card.title, card.desc)

